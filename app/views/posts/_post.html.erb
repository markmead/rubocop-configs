<article class="flex flex-col justify-between border-2 border-gray-200 divide-y-2 divide-gray-200 rounded-lg hover:border-black">
  <%= link_to post, class: 'px-6 py-4 block' do %>
    <% unless post.live? %>
      <span class="inline-flex items-center px-2 py-1 mb-2 text-xs font-medium text-gray-800 bg-orange-100 rounded-full">
        not live
      </span>
    <% end %>
    <h3 class="text-2xl font-semibold">
      <%= post.title %>
    </h3>
    <% if post.description %>
      <div class="max-w-lg mt-1 prose">
        <p>
          <%= truncate(strip_tags(@post.description.to_s), length: 200) %>
        </p>
      </div>
    <% end %>
    <span class="inline-flex items-center px-6 py-2 mt-4 font-semibold text-white uppercase bg-blue-700 rounded-md">
      <span class="text-xs">Take a look</span>
      <span class="ml-3">ðŸ‘‰</span>
    </span>
  <% end %>
  <div class="px-6 py-2 bg-gray-100 rounded-b-lg md:flex md:items-center md:justify-between">
    <div class="flex items-center space-x-2">
      <% post.tags.each do |tag| %>
        <%= link_to tag_path(tag) do %>
          <%= render 'components/tag', title: tag.name %>
        <% end %>
      <% end %>
    </div>
    <p class="mt-3 text-sm font-medium text-gray-600 md:ml-3 md:mt-0">
      <%= post.username %>
    </p>
  </div>
</article>
