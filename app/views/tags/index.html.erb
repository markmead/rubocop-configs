<% set_meta_tags title: 'Rubocop Tags',
                 description: 'Search through the Rubocop config collection via tags',
                 og: { title: 'Rubocop Tags' } %>

<section class="py-12 bg-white sm:py-16 lg:py-20" data-controller="remote" data-remote-response-target="#tag_wrapper">
  <div class="container">
    <header>
      <h1 class="text-3xl font-extrabold tracking-tight text-gray-900 sm:text-4xl">
        Rubocop Tags
      </h1>
      <div class="mt-4 lg:grid lg:grid-cols-2 lg:gap-5 lg:items-start">
        <p class="text-xl text-gray-500">
          Search and filter cops by tags
        </p>
        <%= form_with url: tags_path, method: :get, remote: true, class: 'flex mt-6 lg:mt-0 lg:justify-end', data: { action: 'ajax:success->remote#replaceInner' } do |f| %>
          <div class="w-full max-w-lg">
            <%= f.label :search, 'Search tags', class: 'sr-only' %>
            <div class="relative">
              <div class="absolute inset-y-0 left-0 flex items-center pl-3 text-xl pointer-events-none">🕵️‍♀️</div>
              <%= f.text_field :search, class: 'w-full pl-10 border-2 border-black form-input', placeholder: "Search tags", data: { action: 'input->remote#submit' } %>
            </div>
          </div>
        <% end %>
      </div>
    </header>
    <main class="flex flex-wrap pt-12 mt-6 -mx-2 -mb-2 border-t-2 border-gray-100" id="tag_wrapper">
      <%= render 'tag_list', tags: @tags %>
    </main>
  </div>
</section>
